@model IEnumerable<Infraestructura.Models.TipoServicio>

@{
    ViewBag.Title = "Servicios";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";

}

<div class="Glass" style="text-transform: none !important;">

    @foreach (var item in Model)
    {

        <div class="container body-content">

            <div class="row" id="product">

                <div class="col-lg-7">
                    <h4 class="product-name"><strong>@Html.DisplayFor(modelItem => item.Descripcion)</strong></h4>

                    <p>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </p>

                </div>
                <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                    <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 15px; font-size:larger;font-weight:100">

                        <center>  <p class="text-center text-info">@Html.DisplayFor(modelItem => item.Precio) colones </p></center>
                    </div>
                    <div class="col-4 col-sm-4 col-md-4">

                        @Ajax.ActionLink("Reservar",
                              "ordenarServicio",
                              "Reserva",
                              new
                              {
                                  idServicio = item.ID
                              },
                              new AjaxOptions
                              {
                                  UpdateTargetId = "cantidadCasas",
                                  InsertionMode = InsertionMode.Replace,
                                  HttpMethod = "GET",
                              }, new { @class = "btn btn-danger" }
                              )
                    </div>
                </div>
            </div>
            <hr class="bg-dark">

        </div>
    }

</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryajax")
