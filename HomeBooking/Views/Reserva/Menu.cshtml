@model IEnumerable<Infraestructura.Models.Casa>

@{
    ViewBag.Title = "Casas";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<div class="Glass" style="text-transform: none !important;">

    @foreach (var item in Model)
    {

        <div class="container body-content">

            <div class="row" id="product">

                <div class="Glass">
                    <img class="rounded mx-auto d-block" style="height:350px; width:800px; margin-top:5%" src="data:image/jpeg;charset=utf-8;base64, @Convert.ToBase64String(item.Foto)">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Descripcion)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Precio) colones </p>
                        <div class="col-4 col-sm-4 col-md-4">

                            @Ajax.ActionLink("Reservar",
                                  "ordenarCasa",
                                  "Reserva",
                                  new
                                  {
                                      idCasa = item.IdCasa
                                  },
                                  new AjaxOptions
                                  {
                                      UpdateTargetId = "cantidadReservas",
                                      InsertionMode = InsertionMode.Replace,
                                      HttpMethod = "GET",
                                  }, new { @class = "btn btn-danger" }
                                  )
                        </div>
                    </div>
                </div>


            </div>
            <hr class="bg-dark">

        </div>
    }

</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryajax")
}