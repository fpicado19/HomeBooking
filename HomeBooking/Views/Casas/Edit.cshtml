@model Infraestructura.Models.Casa

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Save", "Casas"))
{
    @Html.AntiForgeryToken()
    
<div class="Glass" style="color:#0d4456">

    <div class="card-body">
        <div class="row mb-3">
            <h2>Editar casa</h2>
            <a class="btn btn-default" href="/Casas/AdminCasas" role="button" style="background-color:#0d4456; color:white; float:right">Back to list</a>
        </div>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(Model => Model.IdCasa)

        <div class="row mb-3">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            @Html.LabelFor(model => model.IDTipoCasa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDTipoCasa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IDTipoCasa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">

            <input type="submit" value="Guardar" class="btn btn-default" style="background-color:#0d4456; color:white" />

        </div>
    </div>
    </div>

    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
